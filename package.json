  "license": "MIT",
  "engines": {
    "node": "16.13.1",
    "npm": "8.6.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "faker": "^6.6.6"
  },
  "devDependencies": {
    "@faker-js/faker": "^7.3.0",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/faker": "^6.6.9",
    "@types/node": "^18.0.4",
    "concurrently": "^7.2.2",
    "nodemon": "^2.0.19",
    "ts-node": "^10.8.2",
    "typescript": "^4.7.4"
  }
}
